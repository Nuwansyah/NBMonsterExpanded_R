{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.zombiewarrior": {
			"initial_state": "idle",
			"states": {
				"idle": {
					"animations": ["idle"],
					"transitions": [
						{"walk": "query.ground_speed >= 0.6 && !query.has_target"},
						{"chase": "query.ground_speed >= 0.6 && query.has_target"},
						{"walkwater": "query.ground_speed >= 0.2 && query.is_in_water"},
						{"attack": "query.is_delayed_attacking && !query.is_item_equipped"},
						{"attackweapon": "query.is_delayed_attacking && query.is_item_equipped "},
						{"roarattack": "query.is_roaring"}
					],
					"blend_transition": 0.3
				},
				"walk": {
					"animations": ["walk"],
					"transitions": [
						{"idle": "query.ground_speed < 0.5"},
						{"chase": "query.ground_speed < 0.5 && query.has_target"},
						{"attack": "query.is_delayed_attacking && !query.is_item_equipped"},
						{"attackweapon": "query.is_delayed_attacking && query.is_item_equipped"},
						{"roarattack": "query.is_roaring"}
					],
					"blend_transition": 0.3
				},
				"chase": {
					"animations": ["chase"],
					"transitions": [
						{"idle": "query.ground_speed < 0.5"},
						{"walk": "query.ground_speed < 0.5 && !query.has_target"},
						{"attack": "query.is_delayed_attacking && !query.is_item_equipped"},
						{"attackweapon": "query.is_delayed_attacking && query.is_item_equipped"},
						{"walkwater": "query.ground_speed >= 0.2 && query.is_in_water"},
						{"roarattack": "query.is_roaring"}
					],
					"blend_transition": 0.3
				},
				"attack": {
					"animations": [
						{"attack1": "variable.animation.attack == 1"},
						{"attack2": "variable.animation.attack == 2"},
						{"attack3": "variable.animation.attack == 3"}
					],
					"on_entry": ["variable.animation.attack = math.random_integer(1, 3);"],
					"transitions": [
						{"idle": "!query.is_delayed_attacking"}
					],
					"blend_transition": 0.3
				},
				"attackweapon": {
					"animations": [
						{"attackweapon1": "variable.animation.attackweapon == 1"},
						{"attackweapon2": "variable.animation.attackweapon == 2"}
					],
					"on_entry": ["variable.animation.attackweapon = math.random_integer(1, 2);"],
					"transitions": [
						{"idle": "!query.is_delayed_attacking"}
					],
					"blend_transition": 0.3
				},
				"roarattack": {
					"animations": ["roar"],
					"transitions": [
						{"idle": "!query.is_roaring"}
					],
					"blend_transition": 0.3
				},
				"stunned": {
					"animations": ["stunned"],
					"transitions": [
						{"idle": "!query.is_stunned"}
					],
					"blend_transition": 0.5
				},
				"walkwater": {
					"animations": ["walkwater"],
					"transitions": [
						{"idle": "query.ground_speed < 0.5 && !query.is_in_water"},
						{"attack": "query.is_delayed_attacking"},
						{"roarattack": "query.is_roaring"}
					],
					"blend_transition": 0.3
				}
			}
		},
		"controller.animation.plainzombie.death": {
			"initial_state": "dead",
			"states": {
				"default": {
					"transitions": [
						{"dead": "!q.is_alive"}
					]
				},
				"dead": {
					"animations": ["death_rot", "dead"],
					"transitions": [
						{"default": "q.is_alive"}
					]
				}
			}
		}
	}
}