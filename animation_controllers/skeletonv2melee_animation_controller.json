{
	"format_version" : "1.10.0",
	"animation_controllers" : {
		"controller.animation.skeletonv2melee" : {
			"initial_state" : "idle",
			"states" : {
				"idle" :  {
					"animations": ["idle"],
					"transitions" : [
						{"meleeattack" : "query.is_delayed_attacking"},
						{"meleestunned": "query.is_stunned"},
						{"walk": "query.ground_speed < 0.5 && !query.has_target"}
					],
					"blend_transition":0.5
				},
				"walk" : {
					"animations": [ "walk" ],
					"transitions" : [
						{"idle" : "query.ground_speed < 0.5"},
						{"meleeattack" : "query.is_delayed_attacking"}
					],
					"blend_transition":0.5
				},
				"meleeattack" : {
					"animations": [ "meleeattack" ],
					"transitions" : [
						{"idle" : "!query.is_delayed_attacking"}
					],
					"blend_transition":0.5
				},
				"meleestunned" : {
					"animations": [ "meleeattackstun1" ],
					"transitions" : [
						{"idle" : "!query.is_stunned"}
					],
					"blend_transition":0.5
				}
			}
		},
		"controller.animation.skeletonv2.death": {
			"initial_state": "dead",
			"states": {
				"default": {
					"transitions": [
						{"dead": "!q.is_alive"}
						
					]
				},
				"dead": {
					"animations": ["death_rot","dead"],
					"transitions": [
						{"default": "q.is_alive"}
					]
				}
			}
		}
	}
}